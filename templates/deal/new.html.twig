{% extends 'base.html.twig' %}

{% block title %}New Deal{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    <style>
        .card {
            animation: fadeInUp 0.5s;
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card animate__animated animate__fadeInUp mt-4">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-7">
                                <h3 class="text-center">Poster un nouveau deal</h3>
                            </div>
                            <div class="col-md-5">
                                <a class="btn bg-primary text-white" href="{{ path('promo_code_new') }}">Ou poster un code promo</a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        {{ include('deal/_form.html.twig') }}
                    </div>
                </div>

                <a href="{{ path('deal_index') }}" class="btn btn-secondary mt-3 animate__animated animate__fadeInUp">Retour aux deals</a>
            </div>
        </div>
    </div>
{% endblock %}