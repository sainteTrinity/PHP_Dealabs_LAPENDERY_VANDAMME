{% extends 'base.html.twig' %}

{% block title %}Deal index{% endblock %}

{% block body %}
    <h1>Deal index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Note</th>
                <th>Price</th>
                <th>NormalPrice</th>
                <th>Shipping</th>
                <th>PromoCode</th>
                <th>Link</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for deal in deals %}
            <tr>
                <td>{{ deal.id }}</td>
                <td>{{ deal.Title }}</td>
                <td>{{ deal.Description }}</td>
                <td>{{ deal.Note }}</td>
                <td>{{ deal.Price }}</td>
                <td>{{ deal.NormalPrice }}</td>
                <td>{{ deal.shipping }}</td>
                <td>{{ deal.promoCode }}</td>
                <td>{{ deal.link }}</td>
                <td>
                    <a href="{{ path('deal_show', {'id': deal.id}) }}">show</a>
                    <a href="{{ path('deal_edit', {'id': deal.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('deal_new') }}">Create new</a>
{% endblock %}
